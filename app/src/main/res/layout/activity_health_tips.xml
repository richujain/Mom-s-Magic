<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5b5457"
    android:fitsSystemWindows="true"
    tools:context=".HealthTips">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HEALTH TIPS"
                android:textSize="25sp"
                android:textColor="@color/White"
                android:layout_centerHorizontal="true"
                android:textAppearance="@font/nunito_bold"/>

    <TextView
        android:id="@+id/health_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textAppearance="@font/nunito_semibold"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:text="aodhsdoahsdjahsdljashdkjashdkasjdhaskjdhask
adsjajlhskjdhaskjdhaskdjahsdkjashd
asjhdakjhdaksjdhskajdhaskdjhaskdjah"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        android:id="@+id/right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/health_tips"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow"
        android:id="@+id/left_arrow"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/health_tips"/>

</RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="70dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_shopping_cart" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/sidebar_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/nav_view">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>